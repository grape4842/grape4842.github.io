.yet{display:none;}

html {font-size:10px;}
body *:focus{outline-color:invert; outline-style:outset;}
#top {color:black;}
.no{font-size:0px;}

#MCGO,#SMGO{position:absolute; top:-100px;}
#MCGO:focus,#SMGO:focus{position:absolute; height:1rem;  padding:1rem; display:block; width:100%;
color:white; top:0%; text-align:center; z-index:9999;}
#MCGO {background-color:#3377ff;}
#SMGO {background-color:#ff0055;}

a{text-decoration:none;}
li {list-style-type:none; list-style-position:outside;}

#bgp {position:absolute; top:0px; left:0px; height:23%;
background-color:#7555dd; width:100%; padding:1% 0%;
border-bottom:10px #b0aaff solid; color:white;}

#bgp a{color:white;}

#menubar {position:fixed; 
z-index:100; top:0px; left:0px; 
background-color:#330099; text-align:left;
width:100%; height:3%; padding:1%;}

.right {float:right;}

#nCOIbLogo {height:4rem; width:4rem;
margin:0px; position:relative;
vertical-align:middle; border-radius:100%;}

#menubar *{color:white;}
body{background-color:#dfddff; font-size:1.5rem;}

#nCOIbM {height:10rem; width:10rem;
border-radius:50%; position:absolute; top:12rem; left:8rem;}

#nCOIbMark {border-radius:100%;}

#MH1{text-align:center; margin:0%;
color:#332244; font-family:HY견고딕; font-size:4rem;
width:52%; height:26%; padding:2% 0%; border:solid 1rem #fffaaa;
background-color:white; margin:auto; margin-top:4%;}

#side{position:fixed; top:30rem; 
text-align:center; float:left; margin:auto; font-family:Arial;}

#side *{text-align:center;}

#infos {border-radius:10%; 
background-color:#aa99ee;
text-align:center; width:17rem;
padding:1rem; margin:auto;
