border-radius:20% 20% 0% 0%;
border-bottom:1px solid lightgray;}
.info2 a{color:black; width:100%;
display:block; height:70%;
position:relative; padding-top:15%;}

#SMinfo {clear:both;}

#siteprofile {background-color:white;
margin:auto; padding:3% 0%;}

#joinbtn {background:linear-gradient(to bottom, #0c0, #0b0, #0a0, #090);
height:4rem; width:8rem; 
border:1px solid #005500;}

#nCOIbjoin:active {background:linear-gradient(to top, #0d0, #0c0, #0b0, #0a0, #090, #080);}

#nCOIbjoin{color:white; display:block; text-align:center;
background:linear-gradient(to bottom, #0c0, #0b0, #0a0, #090);
line-height:4rem; width:8rem;
border:1px solid #005500; margin:auto;}

#writeidea {display:block; color:white;
background:linear-gradient(to bottom, #62a,  #519, #407); margin:5% auto;
width:16rem; line-height:5rem; font-weight:bold;}

#writeidea:active
{background:linear-gradient(to top, #62a,  #519, #407);}

.search {position:fixed;}

#menu {position:fixed; z-index:60;
width:13%; height:40%; overflow-y:scroll;
background-color:#410077;
border:1rem #9977ff solid;
text-align:left; padding:1%;}

#menu * {color:white; text-align:left;}
#menu hr {border:dotted lavender 1px;
}

#menu li {margin:2%; 0px;}

.inner{margin-left:-3rem;}


#main {background-color:white;  margin:auto; left:33rem;
